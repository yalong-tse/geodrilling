<div class="page-header">
  <h3>设备管理/库存管理</h3>
</div>
<div class="tabbable">
  <ul class="nav nav-tabs">
    <li class="active"><a href="#tab1" data-toggle="tab">钻塔</a></li>
    <li> <a href="#tab2" data-toggle="tab">钻机</a></li>
    <li> <a href="#tab3" data-toggle="tab">泥浆泵</a></li>
    <li> <a href="#tab4" data-toggle="tab">设备配组</a></li>
  </ul>
  <div class="tab-content">
    <div class="tab-pane active" id="tab1">
<table class="table table-striped">
  <tr>
    <th>设备名称</th>
    <th>设备分类</th>
    <th>数量</th>
    <th>保管人</th>
    <th>使用人</th>
    <th>设备状态</th>
    <th>操作</th>
  </tr>

<% @equipment.each do |equipment| %>
  <tr>
    <td><%= link_to equipment.name , equipment %></td>
    <td><%= equipment.category %></td>
    <td><%= equipment.quantity %></td>
    <td><%= equipment.keeper %></td>
    <td><%= equipment.borrower %></td>
    <td><%= equipment.usage %></td>
    <td><%= link_to '详情', equipment %> |
    <%= link_to '删除', equipment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>
    </div>
    <div class="tab-pane" id="tab2">
      <p> 钻机的界面 </p>
    </div>
    <div class="tab-pane" id="tab3">
      <p> 泥浆泵界面 </p>
    </div>
    <div class="tab-pane" id="tab4">
      <p> 设备配组界面 </p>
    </div>
  </div>
</div>

<br />

