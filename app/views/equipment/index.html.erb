<div class="page-header">
  <h3>设备管理</h3>
</div>

<table class="table table-striped">
  <tr>
    <th>设备名称</th>
    <th>设备分类</th>
    <th>数量</th>
    <th>保管人</th>
    <th>使用人</th>
    <th>设备状态</th>
    <th>操作</th>
  </tr>

<% @equipment.each do |equipment| %>
  <tr>
    <td><%= equipment.name %></td>
    <td><%= equipment.category %></td>
    <td><%= equipment.quantity %></td>
    <td><%= equipment.keeper %></td>
    <td><%= equipment.borrower %></td>
    <td><%= equipment.usage %></td>
    <td><%= link_to 'Show', equipment %>,
    <%= link_to 'Edit', edit_equipment_path(equipment) %>,
    <%= link_to 'Destroy', equipment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to '新增设备', new_equipment_path ,:class=>"btn btn-primary" %>
<%=setActiveTab("_equipments") %>
