<%= form_for @equipment,:html=>{:class=>"form-horizontal"} do |f| %>
  <% if @equipment.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@equipment.errors.count, "error") %> prohibited this equipment from being saved:</h2>

      <ul>
      <% @equipment.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label "设备名称",:class=>"control-label" %>
    <div class="controls">
    <%= f.text_field :name, :class=>"text_field" %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label "设备分类",:class=>"control-label" %>
    <div class="controls">
    <%= f.text_field :category, :class=>"text_field" %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label "设备数量",:class=>"control-label" %>
    <div class="controls">
    <%= f.number_field :quantity, :class=>"text_field" %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label "保管人",:class=>"control-label" %>
    <div class="controls">
    <%= f.text_field :keeper, :class=>"text_field" %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label "借用人",:class=>"control-label" %>
    <div class="controls">
    <%= f.text_field :borrower, :class=>"text_field" %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label "使用状态",:class=>"control-label" %>
    <div class="controls">
    <%= f.number_field :usage , :class=>"text_field"%>
    </div>
  </div>
  <div class="form-actions">
    <%= f.submit "新增设备" ,:class=>"btn btn-primary"%> |
    <%= link_back %>
  </div>
<% end %>
