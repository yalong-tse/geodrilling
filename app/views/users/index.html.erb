<%= render partial: "layouts/flash_messages" %>
<%= form_tag destroy_multiple_department_users_path(@department), :method => "delete" do %>

<table class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <% if can? :delete, User %>
        <th class="center" width="5%"><%= check_box_tag "selectAll" %><span class="lbl"></span></th>
      <% end %>
      <th width="10%"><%= User.human_attribute_name("name") %></th>
      <th width="10%"><%= User.human_attribute_name("sex") %></th>
      <th width="15%"><%= User.human_attribute_name("position") %></th>
      <th width="15%">登陆账号</th>
      <th width="20%">用户角色</th>
      <th width="15%"><%= t '.contactway' %></th>
      <th width="15%"><%= t 'labels.handle' %></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <% if can? :delete, User %>
          <td class="center"><%= check_box_tag "users[]", user.id %><span class="lbl"></span></td>
        <% end %>
        <td><%= user.name %></td>
        <td><%= human_sex(user) %></td>
        <td><%= user_position(user) %></td>
        <td><%= user.account %></td>
        <td><%= user_role_treat(user.roles) %></td>
        <td><%= contactway(user) %></td>
        <td class="td-actions">
          <div class="inline position-relative btn-group">
            <% if can? :read, user %>
              <%= link_to department_user_path(@department, user), :class => "btn btn-mini btn-success tooltip-success", :rel => "tooltip", 'title'=>"查看" do %>
                <i class="icon-eye-open bigger-120"></i>
              <% end %>
            <% end %>
            <% if can? :modify, user %>
              <%= link_to edit_department_user_path(@department, user), :class => "btn btn-mini btn-info" do %>
                <i class="icon-edit bigger-120"></i>
              <% end %>
            <% end %>
            <% if can? :delete, user %>
              <%= link_to department_user_path(@department, user), :class => "btn btn-mini btn-danger", method: :delete, data: { confirm: t('prompt.confirm.delete') } do %>
                <i class="icon-trash bigger-120"></i>
              <% end %>
            <% end %>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<br />
<% if can? :index, User %>
  <%= link_to t('labels.new'), new_department_user_path, :class => "btn btn-primary" %>
<% end %>
<% if can? :index, User %>
  <%= submit_tag t('labels.destroy'), :class => "btn" %>
<% end %>

<% end %>
