<%= form_for(@tourreport, :html=>{:class=>"form-horizontal"}) do |f| %>
  <% if @tourreport.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@tourreport.errors.count, "error") %> prohibited this tourreport from being saved:</h2>

      <ul>
