    <%= f.label "记录员" ,:class=>"control-label" %>
    <div class="controls">
      <%= f.text_field :recorder ,:class=>"text_field"%>
    </div>
  </div>
  <div class="control-group">
    <%= f.label "本班进尺" ,:class=>"control-label" %>
