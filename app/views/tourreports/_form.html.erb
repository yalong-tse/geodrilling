  </div>
  <div class="control-group">
    <%= f.label "开始时间" ,:class=>"control-label" %>
    <div class="controls">
      <%= f.select(:starttime, options_for_select(Tourreport::TOURTIME), :class=>"text_field",:cols=>"3", :prompt=>"请选择...") %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label "结束时间" ,:class=>"control-label" %>
