<% content_for(:title,"班报详情") %>

<div class="row-fluid">
    <div class="span12">
      <div class="widget-box transparent">
        <div class="widget-header widget-header-flat">
          <h5 class="lighter"><i class="icon-signal orange"></i>钻进班报表记录</h5>
          <div class="widget-toolbar widget-toolbar-light no-border">
          <i class="icon-bell purple"></i>
          钻孔编号：<span class="text-warning" style="text-decoration:underline"><%=@tourreport.hole.holenumber if @tourreport.hole %></span>
          <i class="icon-bell purple"></i>
          <span class="text-error" style="text-decoration:underline"><%=@deployment.rigmachine.devicenumber if @deployment && @deployment.rigmachine  %></span>号钻机
          <span class="text-error" style="text-decoration:underline"><%=@tourreport.tourdate.strftime("%Y") %></span>年<span class="text-error" style="text-decoration:underline"><%=@tourreport.tourdate.strftime("%m") %></span>月<span class="text-error" style="text-decoration:underline"><%=@tourreport.tourdate.strftime("%d") %></span>日<span class="text-error" style="text-decoration:underline"><%= @tourreport.starttime.strftime("%H:%M")%></span>至<span class="text-error" style="text-decoration:underline"><%=@tourreport.finishtime.strftime("%H:%M")%></span>时<span class="text-error" style="text-decoration:underline"><%= morning_or_noon(@tourreport.starttime.strftime("%H:%M"))  %></span>班</span>
           </div>
        </div>
        <div class="widget-body">
          <div class="widget-main no-padding">

              <table class="table table-striped table-bordered">
                <thead>
                  <tr>
                  <th colspan="2" style="text-align:center" >时间</th>
                  <th rowspan="2">工作内容</th>
                  <th rowspan="2">上余</th>
                  <th rowspan="2">进尺</th>
                  <th rowspan="2">孔深</th>
                  <th colspan="5" style="text-align:center">岩矿心</th>
                  <th colspan="3" style="text-align:center">钻头</th>
                  <th colspan="2" style="text-align:center">扩孔器</th>
                  <th colspan="4" style="text-align:center">钻进参数</th>
                </tr>
                <tr>
                  <th>起</th>
                  <th>至</th>
                  <th>名称</th>
                  <th>等级</th>
                  <th>编号</th>
                  <th>长度</th>
                  <th>残留</th>
                  <th>残留</th>
                  <th>规格</th>
                  <th>类型</th>
                  <th>编号</th>
                  <th>类型</th>
                  <th>编号</th>
                  <th>压力</th>
                  <th>转速</th>
                  <th>泵量</th>
                </tr>
                </thead>
                <tbody>
                 <% @contentarr.each do |content| %>
                   <tr>
                     <td><%=content.starttime.strftime("%H:%M") %></td>
                     <td><%=content.finishtime.strftime("%H:%M") %></td>
                     <td><%=content.content %></td>
                     <td></td>
                     <td><%=content.drilllength %></td>
                     <td><%=content.drilllength.nil?? @tourreport.lastdeep : @tourreport.lastdeep+content.drilllength %></td>
                     <td></td>
                     <td></td>
                     <td></td>
                     <td></td>
                     <td></td>
                     <td></td>
                     <td></td>
                     <td></td>
                     <td></td>
                     <td></td>
                     <td></td>
                     <td></td>
                     <td></td>
                     <td></td>
                   </tr>
                 <% end %>
                </tbody>
                <tfoot>
                  <tr>
                    <td colspan="2">本班进尺</td>
                    <td><%=@tourreport.tourshift%></td>
                    <td colspan="2">本班取心</td>
                    <td><%=@tourreport.tourcore%></td>
                    <td colspan="2">扶正器长</td>
                    <td colspan="5"></td>
                    <td colspan="2">防斜措施</td>
                    <td colspan="5"></td>
                  </tr>
                  <tr>
                    <td colspan="3">交接说明或记事</td>
                    <td colspan="17"></td>
                  </tr>
                  <tr>
                    <td colspan="2">出勤人员</td>
                    <td colspan="2">
                      <ul class="unstyled spaced">
                        <li><i class="icon-group blue"></i><%=@tourreport.administrator%></li>
                        <li><i class="icon-group blue"></i><%=@tourreport.recorder%></li>
                      </ul>
                    </td>
                    <td colspan="2">时长计算</td>
                    <td colspan="3">
                      <ul class="unstyled spaced">
                      <li><i class="icon-star blue"></i>纯钻<%=@tourreport.tourdrillingtime%></li>
                      <li><i class="icon-star blue"></i>辅助<%=@tourreport.tourauxiliarytime%></li>
                      <li><i class="icon-star blue"></i>孔内</li>
                      <li><i class="icon-star blue"></i>设备</li>
                      <li><i class="icon-star blue"></i>其他</li>
                      <li><i class="icon-star blue"></i>合计</li>
                      </ul>
                    </td>
                    <td colspan="2">钻具交接</td>
                    <td colspan="9"><%=@tourreport.intrumenttakeover%></td>
                  </tr>
                  <tr>
                    <td colspan="2">说明</td>
                    <td colspan="18"></td>
                  </tr>
                </tfoot>

          </div>
        </div>
      </div>
    </div>
  </div>

