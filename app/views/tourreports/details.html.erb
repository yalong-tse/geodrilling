<% content_for(:title,"班报详情") %>

<div class="row-fluid">
  <div class="span10" align="center"><h4>钻进班报表记录</h4></div>
</div>
<div class="row-fluid">
  <div class="span2" align="center">钻孔编号：<%=@tourreport.hole.holenumber if @tourreport.hole %></div>
  <div class="span8" align="center">
    <span><%=@deployment.rigmachine.devicenumber if @deployment && @deployment.rigmachine  %>号钻机</span>
    <span><%=@tourreport.tourdate.strftime("%Y") %>年<%=@tourreport.tourdate.strftime("%m") %>月<%=@tourreport.tourdate.strftime("%d") %>日<%= @tourreport.starttime.strftime("%H:%M")%>至<%=@tourreport.finishtime.strftime("%H:%M")%>时<%= morning_or_noon(@tourreport.starttime.strftime("%H:%M"))  %>班</span>
  </div>
</div>

<div class="row-fluid">

              <table class="table table-striped table-bordered">
                <thead>
                  <tr>
                  <th colspan="2" align="center" >时间</th>
                  <th rowspan="2">工作内容</th>
                  <th rowspan="2">上余</th>
                  <th rowspan="2">进尺</th>
                  <th rowspan="2">孔深</th>
                  <th colspan="5">岩矿心</th>
                  <th colspan="3">钻头</th>
                  <th colspan="2">扩孔器</th>
                  <th colspan="4">钻进参数</th>
                </tr>
                <tr>
                  <th>起</th>
                  <th>至</th>
                  <th>名称</th>
                  <th>等级</th>
                  <th>编号</th>
                  <th>长度</th>
                  <th>残留</th>
                  <th>残留</th>
                  <th>规格</th>
                  <th>类型</th>
                  <th>编号</th>
                  <th>类型</th>
                  <th>编号</th>
                  <th>压力</th>
                  <th>转速</th>
                  <th>泵量</th>
                </tr>
                </thead>
                <tbody>
                 <% @contentarr.each do |content| %>
                   <tr>
                     <td><%=content.starttime.strftime("%H:%M") %></td>
                     <td><%=content.finishtime.strftime("%H:%M") %></td>
                     <td><%=content.content %></td>
                     <td></td>
                     <td><%=content.drilllength %></td>
                     <td><%=content.drilllength.nil?? @tourreport.lastdeep : @tourreport.lastdeep+content.drilllength %></td>
                     <td></td>
                     <td></td>
                     <td></td>
                     <td></td>
                     <td></td>
                     <td></td>
                     <td></td>
                     <td></td>
                     <td></td>
                     <td></td>
                     <td></td>
                     <td></td>
                     <td></td>
                     <td></td>
                   </tr>
                 <% end %>
                </tbody>
                <tfoot>
                  <tr>
                    <td colspan="2">本班进尺</td>
                    <td><%=@tourreport.tourshift%></td>
                    <td colspan="2">本班取心</td>
                    <td><%=@tourreport.tourcore%></td>
                    <td colspan="2">扶正器长</td>
                    <td colspan="5"></td>
                    <td colspan="2">防斜措施</td>
                    <td colspan="5"></td>
                  </tr>
                  <tr>
                    <td colspan="3">交接说明或记事</td>
                    <td colspan="17"></td>
                  </tr>
                  <tr>
                    <td colspan="2">出勤人员</td>
                    <td colspan="2"></td>
                    <td colspan="2">时长计算</td>
                    <td colspan="3">
                      <ul class="unstyled spaced">
                      <li><i class="icon-star blue"></i>纯钻<%=@tourreport.tourdrillingtime%></li>
                      <li><i class="icon-star blue"></i>辅助<%=@tourreport.tourauxiliarytime%></li>
                      <li><i class="icon-star blue"></i>孔内</li>
                      <li><i class="icon-star blue"></i>设备</li>
                      <li><i class="icon-star blue"></i>其他</li>
                      <li><i class="icon-star blue"></i>合计</li>
                      </ul>
                    </td>
                    <td colspan="2">钻具交接</td>
                    <td colspan="9"><%=@tourreport.intrumenttakeover%></td>
                  </tr>
                </tfoot>
</div>

<div class="row-fluid">

</div>
