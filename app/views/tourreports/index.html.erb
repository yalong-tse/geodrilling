<div class="page-header">
  <h5>
  <ul class="breadcrumb warn warn-info">
    <li>钻孔管理<span class="divider">/</span></li>
    <li>班报管理</li>
  </ul>
  </h5>
</div>
<div class="container">
    <form class="form-inline">
      <%=label_tag "矿区：" , nil, :class=>"control-label" %> <%=text_field_tag :minearea,nil,:class=>"input-medium", :placeholder=>"" %>
      &nbsp;&nbsp;&nbsp;&nbsp;
      <%=label_tag "孔号：", nil, :class=>"control-label" %><%=text_field_tag :holenumber,nil,:class=>"input-medium",:placeholder=>"zk001" %>
      &nbsp;&nbsp;&nbsp;&nbsp;
      <%=label_tag "合同名称：" ,nil, :class=>"control-label"%>&nbsp;&nbsp;<%=text_field_tag :contract_name,nil,:class=>"input-medium",:placeholder=>"" %>
      <button type="submit" class="btn"><i class="icon-search"></i> 查询</button>
    </form>
</div>
<div class="container">
<table class="table table-striped">
  <tr>
    <th>钻孔编号</th>
    <th>班报日期</th>
    <th>开始时间</th>
    <th>结束时间</th>
    <th>项目经理</th>
    <th>班长</th>
    <th>记录员</th>
    <th>本班进尺</th>
    <th>本班取心</th>
    <th>纯钻时间</th>
    <th>辅助时间</th>
  </tr>

<% @tourreports.each do |tourreport| %>
  <tr>
    <td><%= tourreport.hole.holenumber if tourreport.hole %></td>
    <td><%= tourreport.tourdate %></td>
    <td><%= formattime(tourreport.starttime.to_s) %></td>
    <td><%= formattime(tourreport.finishtime.to_s) %></td>
    <td><%= tourreport.administrator %></td>
    <td><%= tourreport.tourleader %></td>
    <td><%= tourreport.recorder %></td>
    <td><%= tourreport.tourshift %></td>
    <td><%= tourreport.tourcore %></td>
    <td><%= tourreport.tourdrillingtime %></td>
    <td><%= tourreport.tourauxiliarytime %></td>
  </tr>
<% end %>
</table>
</div>
<%= link_to '新增班报', new_tourreport_path , :class=>"btn btn-primary" %>
<%= link_to '班报日历', schedule_index_path , :class=>"btn btn-primary" %>
