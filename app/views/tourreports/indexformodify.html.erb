<% content_for(:title,"班报修改")%>
<table id= "_table_tourreports" class="table table-striped">
  <thead>
  <tr>
    <th>班报日期</th>
    <th>开始时间</th>
    <th>结束时间</th>
    <th>项目经理</th>
    <th>班长</th>
    <th>记录员</th>
    <th>本班进尺</th>
    <th>本班取心</th>
    <th>纯钻时间</th>
    <th>辅助时间</th>
    <th>操作</th>
  </tr>
</thead>

<% @tourreports.each do |tourreport| %>
  <tr>
    <td><%= tourreport.tourdate %></td>
    <td><%= formattime(tourreport.starttime.to_s) %></td>
    <td><%= formattime(tourreport.finishtime.to_s) %></td>
    <td><%= tourreport.administrator %></td>
    <td><%= tourreport.tourleader %></td>
    <td><%= tourreport.recorder %></td>
    <td><%= tourreport.tourshift %></td>
    <td><%= tourreport.tourcore %></td>
    <td><%= tourreport.tourdrillingtime %></td>
    <td><%= tourreport.tourauxiliarytime %></td>
    <td>
      <%= link_to '修改', edit_tourreport_path(tourreport) ,:class=>"btn btn-small btn-info" %>
    </td>
  </tr>
<% end %>
</table>
<% content_for :page_specific_javascripts do %>
  <%= javascript_include_tag 'jquery.dataTables.min' %>
  <%= javascript_include_tag 'jquery.dataTables.bootstrap' %>
<% end %>
<% content_for :inline_javascripts do %>
