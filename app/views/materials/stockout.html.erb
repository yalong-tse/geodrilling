<% content_for(:title,"材料出库") %>
<table class="table table-striped table-hover table-bordered">
  <tr>
    <th width="20%">材料名称</th>
    <th width="10%">材料型号</th>
    <th width="10%">材料单价</th>
    <th width="10%">材料数量</th>
    <th width="20%">入库时间</th>
    <th width="20%">操作</th>
  </tr>

<% @materials.each do |material| %>
  <tr>
    <td><%= material.name %></td>
    <td><%= material.model %></td>
    <td><%= material.price %></td>
    <td><%= material.count %></td>
    <td><%= material.stockdate %></td>
    <td><button class="btn btn-small btn-warning" data-toggle="modal" data-target="#_materials_modal" >出库</button></td>
  </tr>
<% end %>
</table>
<br />
<div id="_materials_modal" class="modal hide fade">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">x</button>
    <h5>材料出库单详情</h5>
  </div>
  <div class="modal-body">
<table class="table table-striped table-hover table-bordered">
  <tr>
    <td>出库日期</td>
    <td><input class="input-large" id="checkoutdate"/></td>
  </tr>
  <tr>
    <td>出库说明</td>
    <td><input class="input-xlarge"/></td>
  </tr>
  <tr>
    <td>配置钻孔</td>
    <td>
      <select class="span4" multiple="multiple" rows="6">
        <% @holes.each do |hole| %>
          <option value="<%= hole.id %>"><%= hole.minearea %>, <%= hole.holenumber %></option>
        <% end %>
      </select> 
    </td>
  </tr>
  <tr>
    <td>材料领用人</td>
    <td><input class="input-large"/></td>
  </tr>
</table>
  </div>
  <div class="modal-footer">
    <button class="btn" data-dismiss="modal">关闭</button>
    <a href="#" class="btn btn-primary">确定</a>
  </div>
</div>
<%= make_datepicker("#checkoutdate") %>
