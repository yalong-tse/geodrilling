<% content_for(:title,"材料库存") %>
<table class="table table-striped table-hover table-bordered">
  <tr>
    <th width="20%">材料名称</th>
    <th width="10%">材料型号</th>
    <th width="10%">材料单价</th>
    <th width="10%">材料数量</th>
    <th width="20%">入库时间</th>
    <th width="20%">操作</th>
  </tr>

<% @materials.each do |material| %>
  <tr>
    <td><%= material.name %></td>
    <td><%= material.model %></td>
    <td><%= material.price %></td>
    <td><%= material.count %></td>
    <td><%= material.stockdate %></td>
    <td><button class="btn btn-small btn-warning" data-toggle="modal" data-target="#_material_modal">查看详情</button></td>
  </tr>
<% end %>
</table>
<br />

<%= link_to '新增材料', new_material_path ,:class=>"btn btn-primary" %>
