<%content_for(:title,"设备履历>钻塔履历") %>
<div class="container">
  <div class="tab-content">
    <div class="tab-pane active">
      <table class="table table-striped table-hover table-bordered">
        <tr>
          <th>设备编号</th>
          <th>借入借出操作</th>
          <th>操作日期</th>
          <th>配置钻孔</th>
        </tr>
        <% @deviceresume.each do |d| %>
          <tr>
            <td><%=d.devicenumber %></td>
            <td><%=d.operatetype %></td>
            <td><%=d.operatedate %></td>
            <td><%=holenumber_dealing(d.holenumber) %></td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
  <div id="my-timeline"></div>
</div>
<script language="javascript">
			$(document).ready(function() {
				createStoryJS({
					type:		'timeline',
					width:		'100%',
					height:		'300',
					source:		'/example_json.json',
					embed_id:	'my-timeline',
					debug:		true
				});
			});
</script>

