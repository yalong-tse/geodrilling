<%content_for(:title,"字典列表") %>
<% content_for(:page_header_description, "系统所有需要的字典表，已经按照类别分类") %>
<div class="row-fluid">
  <table id="_dictionary_table" class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th>字典项目</th>
      <th>字典类型</th>
      <th>顺序号</th>
      <th>是否可用</th>
    </tr>
  </thead>
  <tbody>
  </tbody>
  </table>
</div>
<%= link_to "新增字典项" , dictionary_new_path , :class=>"btn btn-primary" %>

<% content_for :page_specific_javascripts do %>
  <%= javascript_include_tag 'jquery.dataTables.min' %>
  <%= javascript_include_tag 'jquery.dataTables.bootstrap' %>
<% end %>

<% content_for :inline_javascripts do %>
<script type="text/javascript">
  $(function(){
      var oTable1=$("#_dictionary_table").dataTable({
        "aoColumns":[null,null,null,{"bSortable":false} ],
        "bProcessing":true,
        "bServerSide":true,
        "bAutoWidth" : false,
        "sAjaxSource":"<%=dictionary_index_path(:format=>:json) %>",
        "oLanguage":{
        "sLengthMenu":"每页 _MENU_",
        "sZeroRecords":"对不起,没有数据",
        "sInfo":"显示 _START_ 到 _END_ ,总计_TOTAL_数据",
        "sInfoEmpty":"显示 0 到 0 , 总计0数据",
        "sSearch": "检索",
        "sProcessing": "系统正在处理...",
        "sInfoFiltered":"(过滤_MAX_数据)" }
        }
        );
  });
</script>
<% end %>
