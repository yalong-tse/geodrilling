<%= render partial: "layouts/flash_messages", flash: flash %>
<% content_for(:title,"领导关注-年度统计") %>
<% content_for(:page_header_description, "领导关注-年度统计功能") %>
<%= content_for :page_specific_javascripts do %>
  <%= javascript_include_tag 'FusionCharts' %>
<% end %>

  <div class="row-fluid">
    <div class="span10">
        <div class="widget-body">
          <div class="widget-main">
		<label class="control-label" >选择年度:</label>
		<select name="year" id="_year" data-placeholder="下拉选择年度">
		  <% for year in 2009..2020 %>
			<option value=<%=year%> <%="selected" if (year==@year) %>><%=year %></option>
		  <% end %>
		</select>
		<button onclick="queryfunction();" class="btn btn-purple btn-small">查询<i class="icon-search icon-on-right bigger-110"></i></button>

  </div>
  </div>
  </div>
  </div>

<div class="tabbable">
  <ul class="nav nav-tabs" id="_tabs">
    <li class="active">
    <a href="#tab1" data-toggle="tab">
      <i class="pink icon-dashboard bigger-110"></i>
      年度统计表
    </a>
    </li>

    <li> 
    <a href="#tab2" data-toggle="tab">
      <i class="blue icon-user bigger-110"></i>
      资金来源统计
    </a>
    </li>

    <li> 
    <a href="#tab3" data-toggle="tab">
      <i class="green icon-rocket"></i>
      合同金额
    </a>
    </li>

  </ul>
  <div class="tab-content">
    <div class="tab-pane active" id="tab1">

<table class="table table-striped table-bordered table-hover">
<thead>
  <tr>
    <th class="center" width="20%">统计项目</th>
    <th class="center" width="80%">统计情况</th>
  </tr>
</thead>
<tbody>
  <tr>
    <td class="center">合同总数</td><td><%= contractyearcount @year%>个</td>
  </tr>
  <tr>
    <td class="center">合同金额</td><td><%= amountcontract @year %> 元</td>
  </tr>
  <tr>
    <td class="center">合同总工作量</td><td><%= totalcontractlength @year %> 米</td>
  </tr>
  <tr>
    <td class="center">已完成钻孔数量</td><td> <%=holeyearcount @year%> 个</td>
  </tr>
  <tr>
    <td class="center">已完成总工作量</td><td><%= @lastyearvalue %> 米</td>
  </tr>
  <tr>
    <td class="center">已完成班报进尺</td><td><%=amountholeshift @year %> 米</td>
  </tr>
  <tr>
    <td class="center">已完成产值</td><td><%= @allhole_output %>  元</td>
  </tr>
</tbody>
</table>

    </div>

    <div class="tab-pane" id="tab2">


    </div>


    <div class="tab-pane" id="tab3">



    </div>

    <div class="tab-pane" id="tab4">



    </div>

  </div> <!--tab content -->
</div> <!-- tabbable -->


<div class="form-actions">
</div>

<%= content_for :inline_javascripts do %>
  <script type="text/javascript">
  $(function(){

  });
  function queryfunction()
  {
    window.location.href="<%=leader_yearreport_path %>?year="+$("#_year").val();
  }
  </script>
<% end %>
