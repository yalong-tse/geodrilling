<table class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th class="center">
        <label>
          <input type="checkbox" class="ace">
          <span class="lbl"></span>
        </label>
      </th>
      <th>姓名</th>
      <th>性别</th>
      <th>联系方式</th>
      <th>所属部门</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
    <tr>
      <td class="center"><%= check_box_tag "users[]", user.id %><span class="lbl"></span></td>
      <td><%= user.name %></td>
      <td><%= human_sex(user) %></td>
      <td><%= contactway(user) %></td>
      <td><%= user.department.name %></td>
    </tr>
    <% end %>
  </tbody>
</table>
<%= link_to t('labels.new'), new_group_path, :class=>"btn btn-primary" %>
<%= submit_tag t('labels.destroy'), :class => "btn" %>
