<table class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th class="center">
        <label>
          <input type="checkbox" class="ace">
          <span class="lbl"></span>
        </label>
      </th>
      <th>姓名</th>
      <th>性别</th>
      <th>联系方式</th>
      <th>所属部门</th>
      <% if !(params[:groupflag] == '3') %>
        <th>配组<%= @groupson %></th>
        <th>操作</th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
    <tr>
      <td class="center"><%= check_box_tag "users[]", user.id %><span class="lbl"></span></td>
      <td><%= user.name %></td>
      <td><%= human_sex(user) %></td>
      <td><%= contactway(user) %></td>
      <td><%= user.department.name %></td>
      <% if !(params[:groupflag] == '3') %>
        <!--<td><button class="btn btn-minier btn-info tooltip-success" title="人员配组"><i class="icon-group"></i></button></td>-->
        <td>
          <% user.members.each do |member| %>
            <i class="icon-user"></i><%= member.name %> 
          <% end %>
        </td>
        <td><%= link_to "<i class='icon-group'></i>".html_safe, {:controller => "groups", :action => "deploy", :groupflag => params[:groupflag], :user_id => user.id}, :class => "btn btn-minier btn-info tooltip-success", :title => "人员配组"%></td>
      <% end %>
    </tr>
    <% end %>
  </tbody>
</table>
<%#= link_to t('labels.new'), new_group_path(groupflag: groupflag), :class=>"btn btn-primary" %>
<%= submit_tag t('labels.destroy'), :class => "btn" %>
